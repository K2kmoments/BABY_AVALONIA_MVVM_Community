<UserControl
    Background="Black"
    d:DesignHeight="720"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="BABY_AVALONIA_MVVM.Views.PooPooView"
    x:DataType="viewModels:PooPooViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BABY_AVALONIA_MVVM.Models"
    xmlns:models1="clr-namespace:BABY_AVALMVVM.Models"
    xmlns:viewModels="clr-namespace:BABY_AVALONIA_MVVM.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <viewModels:PooPooViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <viewModels:PooPooViewModel x:Key="Vm" />
    </UserControl.Resources>


    <Grid
        ColumnDefinitions="2*,*"
        Margin="10"
        RowDefinitions="*,*">
        <Border
            Background="#454545"
            CornerRadius="20"
            Grid.Column="1"
            Grid.RowSpan="2"
            Margin="10,20,20,20"
            Name=" RechtsHinten">
            <Grid RowDefinitions="100,*,Auto">
                <TextBlock
                    FontSize="20"
                    Foreground="FloralWhite"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,40,0,0"
                    Text="Your Selection"
                    VerticalAlignment="Top" />
                <StackPanel Grid.Row="1">
                    <ListBox Background="Transparent" ItemsSource="{Binding PooPooItemList}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models1:PooPooItem">
                                <Border
                                    Background="WhiteSmoke"
                                    CornerRadius="30"
                                    Margin="20,0,20,0">
                                    <StackPanel
                                        HorizontalAlignment="Stretch"
                                        Margin="10"
                                        Orientation="Horizontal">
                                        <PathIcon
                                            Background="Transparent"
                                            Data="{StaticResource LineHorizontal3Regular}"
                                            Grid.Column="2"
                                            Margin="20,0,0,0" />
                                        <Image
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,0"
                                            MaxHeight="50"
                                            Source="{Binding Icon}" />
                                        <TextBlock
                                            FontSize="15"
                                            Margin="0,0,0,0"
                                            Text="{Binding Name}"
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <Button
                    Background="WhiteSmoke"
                    Command="{Binding SaveButtonPressCommand}"
                    Content="Save"
                    CornerRadius="10"
                    Grid.Row="2"
                    Height="50"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Margin="0,0,0,20"
                    Name="SaveButton"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Width="250" />

            </Grid>
        </Border>
        <Border
            Background="PowderBlue"
            CornerRadius="20"
            Grid.Column="0"
            Grid.Row="0"
            Margin="20,20,10,0"
            Name="PeePeeSection">
            <Grid RowDefinitions="5*,*">
                <StackPanel
                    Orientation="Vertical"
                    Spacing="4"
                    VerticalAlignment="Center">

                    <Grid
                        ColumnDefinitions="Auto,*,Auto"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0"
                        MaxWidth="150"
                        VerticalAlignment="Center">

                        <Carousel Grid.Column="1" Name="PeeCarousel">
                            <Carousel.PageTransition>
                                <PageSlide Duration="0.25" Orientation="Horizontal" />
                            </Carousel.PageTransition>
                            <Image Source="/Assets/PooPoo/WaterDropFace.png" />

                        </Carousel>

                    </Grid>

                </StackPanel>
                <Button
                    Background="Transparent"
                    BorderBrush="#252525"
                    BorderThickness="1"
                    Command="{Binding PeeSelectCommand}"
                    Content="Select"
                    CornerRadius="10"
                    Grid.Row="1"
                    Height="50"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Margin="0,0,0,20"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Width="150" />
            </Grid>
        </Border>
        <Border
            Background="WhiteSmoke"
            CornerRadius="20"
            Grid.Column="0"
            Grid.Row="1"
            Margin="20,20,10,20"
            Name="PooPooSection">
            <Grid RowDefinitions="5*,*">
                <StackPanel
                    Orientation="Vertical"
                    Spacing="4"
                    VerticalAlignment="Center">

                    <Grid
                        ColumnDefinitions="Auto,2*,Auto"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0"
                        MaxWidth="300"
                        VerticalAlignment="Center">
                        <Button
                            Background="Transparent"
                            BorderBrush="#252525"
                            BorderThickness="1"
                            Grid.Column="0"
                            Margin="0,0,15,0"
                            Name="left"
                            Padding="12,20"
                            VerticalAlignment="Center"
                            Width="50">
                            <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="Black" />
                        </Button>
                        <Carousel
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            Name="carousel">
                            <Carousel.PageTransition>
                                <PageSlide Duration="0.25" Orientation="Horizontal" />
                            </Carousel.PageTransition>

                            <Image Source="/Assets/PooPoo/brownPooface.png" />
                            <Image Source="/Assets/PooPoo/yellowPooFace.png" />
                            <Image Source="/Assets/PooPoo/greenPooface.png" />
                            <Image Source="/Assets/PooPoo/orangePooface.png" />
                            <Image Source="/Assets/PooPoo/yellowPooFace.png" />


                        </Carousel>
                        <Button
                            Background="Transparent"
                            BorderBrush="#252525"
                            BorderThickness="1"
                            Grid.Column="2"
                            Margin="15,0,0,0"
                            Name="right"
                            Padding="10,20"
                            VerticalAlignment="Center"
                            Width="50">
                            <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" Fill="Black" />
                        </Button>
                    </Grid>

                </StackPanel>
                <Button
                    Background="Transparent"
                    BorderBrush="#252525"
                    BorderThickness="1"
                    Command="{Binding PooPooSelectCommand}"
                    Content="Select"
                    CornerRadius="10"
                    Grid.Row="1"
                    Height="50"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Margin="0,0,0,20"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Width="150" />
            </Grid>
        </Border>
    </Grid>

</UserControl>
